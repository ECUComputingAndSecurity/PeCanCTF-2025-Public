    <link rel="stylesheet" href="/static/css/code-theme.css" />
    <title>CodeCTF - submit challenges</title>
</head>

<body>
    <div id="main" class="d-flex flex-row">
        <div class="sidebar"><a href="/"><img style="cursor: pointer;" id="flag" src="/static/imgs/red-flag.png" /> </a>
        </div>
        <div class="context">
            <div id='head'>
                <!-- <label style="color:white;display: flex;margin: auto; font-size:3em">Challenge / <label id="chalname">#</label></label> -->
                <h1>Challenge / <label id="chalname">
                        <% if(title){ %>
                            <%= title %>
                                <% } else{ %>
                                    #
                                    <% } %>
                    </label></h1>

                <a id="archive" class="d-flex" href="<%= link %>" target="blank_">
                    <label>Archive</label><img src="/static/imgs/github.png" />
                </a>
            </div>

            <div id="about">
                <%- about %>
            </div>

            <!-- Submit challenge code, PoC code and writeup -->
            <div id="poc" class="d-flex flex-column h-100">
                <h2 class="text-left">PoC</h2>
                <pre><code id="codeblock" class="language-python">
<%= poc %>
                </code></pre>
            </div>

            <div id="writeup">
                <%- writeup %>
            </div>

        </div>
    </div>
</body>

